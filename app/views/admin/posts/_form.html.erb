<%= form_for [:admin, @post], :html => {:class => "no_horizontal"} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>
  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <div id="epiceditor"></div>
    <div class="hidden">
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="field">
    <%= f.check_box :published %><%= f.label :published %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', admin_posts_path %>

<%= javascript_tag do %>
  new Helpers.PostsEpicEditor("epiceditor", "post_content");
<% end %>
