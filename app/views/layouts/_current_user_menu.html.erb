<% if current_user %>
  <div id="current_user_menu">
    <%= current_user.name %>
    <% if current_user.is_admin %>
      <div><%= link_to t("dashboard", default: "Dashboard"), admin_path %></div>
    <% end %>
    <div><%= link_to t("log_out", default: "Log out"), logout_path %></div>
  </div>
<% end %>
