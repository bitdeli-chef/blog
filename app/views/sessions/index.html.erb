<div>
  <h2><%= t("login", default: "Login") %></h2>

  <%= form_tag sessions_path do %>

    <div class="field">
      <%= label_tag "username", t("username", default: "Username") %>
      <%= text_field_tag "username", params[:username], required: true %>
    </div>

    <div class="field">
      <%= label_tag "password", t("password", default: "Password") %>
      <%= password_field_tag "password", nil, required: true %>
    </div>

    <div class="actions">
      <%= submit_tag "Log in", disable_with: "logging in.." %>
    </div>

  <% end %>
</div>
