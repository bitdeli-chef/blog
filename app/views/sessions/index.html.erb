<div class="">
  <h2>Login</h2>

  <%= form_tag sessions_path do %>

    <div class="field">
      <%= label_tag "username" %>
      <%= text_field_tag "username", params[:username], required: true %>
    </div>

    <div class="field">
      <%= label_tag "password" %>
      <%= password_field_tag "password", nil, required: true %>
    </div>

    <div class="actions">
      <%= submit_tag "Log in", disable_with: "logging in.." %>
    </div>

  <% end %>
</div>
