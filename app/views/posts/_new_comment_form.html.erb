<h4>
  <%= t("add_comment", default: "Write comment") %>
</h4>

<%= form_for [@post, @comment], remote: true do |f| %>

  <%= f.hidden_field :post_id %>
  
  <div class="field">
    <%= f.label :name, t("name", default: "Name") %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :email, t("email", default: "Email") %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :website, t("website", default: "Website") %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :content, t("comment", default: "Comment") %>
    <%= f.text_area :content, required: true %>
  </div>
  
  <div class="actions">
    <%= f.submit t("to_comment", default: "Comment"), :data => {:disable_with => t("commenting", default: "Adding...") } %>
  </div>

<% end %>
