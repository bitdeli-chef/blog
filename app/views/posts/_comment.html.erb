<div class="comment">
  <div class="person">
    <% unless comment.website.blank? %>
      <%= link_to comment.name, comment.website %>:
    <% else %>
      <%= comment.name %>:
    <% end %>
  </div>
  <div class="content">
    <%= comment.content %>
  </div>
  <div class="date">
    <%= l comment.created_at, format: :short %>
  </div>
</div>
